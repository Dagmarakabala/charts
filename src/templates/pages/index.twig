{% extends '../layouts/default.twig' %}
{% set head_title = 'Index' %}
{% set body_class = '' %}

{% block page %}

  <style>
    /* Inline styling for the demo purpose */
    body,
    .demo {
      padding: 1.5rem;
    }
    body {
      background-color: #fafafa;
    }
    .demo {
      max-width: 640px;
      margin-left: auto;
      margin-right: auto;
      background-color: white;
      border: 1px solid #eee;
    }
    .demo-title,
    .demo-subtitle {
      margin-bottom: 1.5rem;
    }
    .demo-subtitle {
      color: #7a7a7a;
    }
    .demo-list {
      list-style: none;
      padding-left: 0;
      margin-bottom: 0;
      font-size: 1.125rem;
    }
    .demo-list li {
      display: block;
      padding: .75rem 0;
      margin-bottom: 0;
      border-bottom: 1px solid #eee;
    }
    .demo-list li:last-child {
      border-bottom: none;
    }
    canvas {
      margin-top: 50px;
    }
    @media (min-width: 768px) {
      body,
      .demo {
        padding: 2rem;
      }
      .demo-title {
        font-size: 2.25rem;
      }
    }
    .chartjs-size-monitor,
    .chartjs-size-monitor-expand,
    .chartjs-size-monitor-shrink {
      position: absolute;
      direction: ltr;
      left: 0;
      top: 0;
      right: 0;
      bottom: 0;
      overflow: hidden;
      pointer-events: none;
      visibility: hidden;
      z-index: -1;
    }

  .chartjs-size-monitor-expand > div {
    position: absolute;
    width: 1000000px;
    height: 1000000px;
    left: 0;
    top: 0;
  }

  .chartjs-size-monitor-shrink > div {
    position: absolute;
    width: 200%;
    height: 200%;
    left: 0;
    top: 0;
  }
  svg {
    margin-top: 50px
  }
  svg rect {
    fill: #ccc;
  }
  svg text {
    fill: #fff;
    font: 16px sans-serif;
    text-anchor: end;
  }
  #d32 {
    width: 400px;
    height: 420px;
  }
  .arc text {
    font: 12px arial;
    text-anchor: middle;
  }  
  .arc path {
    stroke: #fff;
  }
  .title {
    fill: black;
    font-weight: italic;
  }
  </style>

  {% set pages = {
    1: {
      t: "Demo Page",
      u: "demo"
    },
    2: {
      t: "Blank Page",
      u: "blank"
    },
  } %}

  <div class="demo">
    <h1 class="demo-title">
      Wykresy
    </h1>
    <p class="demo-subtitle">
      Przyk≈Çadowe wykresy
    </p>
    <canvas id="chart"></canvas>
    <canvas id="chart2"></canvas>
    <canvas id="chart3"></canvas>
    <div id="d3"> </div>
    <svg id="d32"> </svg>
    {#<ul class="demo-list">
      {% for page in pages %}
      <li><a href="{{ page.u }}.html">{{ page.t }}</a></li>
      {% endfor %}
    </ul>#}
  </div>

{% endblock %}
